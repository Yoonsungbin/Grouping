.sidebar{
	width: 135px;
	height: 100%;
	-webkit-transition-property: height;	
	background-color: #737373;
	box-shadow: 1px 0px 7px rgba(0, 0, 0, 0.5);
	position: fixed;
	top: 0;
	left: 0;
	z-index: 100;
}
.sidebar>a{
	float: right;
	color: #F2F2F2;
	font-size: 36px;
	padding: 20px 5px 10px 0;
	text-decoration: none;
}
.sidebar>a:hover{
	color: #f2b23a;
}
.menu{
	clear: both;
	margin-top: 20px;
	padding: 0;
}
.menu li{
	list-style: none;
	display: block;
	text-align: right;
	padding-right: 10px;
}
.menu li a{
	font-size: 16px;
	color: #F2F2F2;
	display: block;
	width: 100%;
	height: 40px;
	line-height: 40px;
	text-decoration: none !important;
}
.menu li a span {
	position: relative;
	z-index: 200;
}
.menu li a:after {
	display: inline-block;
	height: 40px;
	float: right;
	position: absolute;
	width: 0px;
	right: 0px;
	background-color: #f2b23a;
	transition: all 0.15s ease-in-out;
	content: " ";
	z-index: 150;
}
.menu li a:hover:after{
	width: 100%;
}
#menu_fix{
	width: 100%;
	position: absolute;
	bottom: 0;
	padding-bottom: 20px;
}
#wrapper{
	height: 100%;
	-webkit-transition-property: height;
	position: absolute;
	top: 0;
	left: 135px;
	right: 0;
}
